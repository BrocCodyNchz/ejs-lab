<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
    <%- include('./partials/nav') %>
  <h1>Full Menu</h1>
  <% menu.forEach(item => { %>
    <div class="menu-item">
        <div class="item-title">
            <h2><%= item.name %></h2>
            <p><strong>$<%= item.price.toFixed(2) %></strong></p>
        </div>

        <p><%= item.details %></p>

        <p>
            Rating:
            <span class="rating">
                <%  for(let i = 0; i < item.rating; i++) %>
            </span>
            (<%= item.rating %>/5)
        </p>
    </div>
  <% }) %>
</body>
</html>
